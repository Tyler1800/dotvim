snippet #if "#if #endif" b
#if ${1:0}
${VISUAL}${0}
#endif
endsnippet

snippet once "Header guard"
#ifndef ${1:`!p
if not snip.c:
	import random, string
	name = re.sub(r'[^A-Za-z0-9]+','_', snip.fn).upper()
	snip.rv = ('%s_' % name).upper()
else:
	snip.rv = snip.c`}
#define $1

${VISUAL}${0}

#endif
endsnippet
